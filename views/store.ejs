<% if (docs.length != 0) { %>
  <div class="row mx-3">
    <div class="accordion mb-5" id="accordion">
      <div class="accordion-item">
        <h2 class="accordion-header" id="headingOne">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
            <i class="fas fa-filter me-1"></i>Filtros
          </button>
        </h2>
        <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordion">
          <div class="accordion-body">
            <p class="m-0"><a href="?filter=accesorios">Accesorios</a></p>
            <p class="m-0"><a href="?filter=almacenamiento">Almacenamiento</a></p>
            <p class="m-0"><a href="?filter=memorias">Memorias</a></p>
            <p class="m-0"><a href="?filter=procesadores">Procesadores</a></p>
            <hr>
            <p class="m-0"><a href="store">Quitar filtros</a></p>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-3 bg-body shadow rounded p-3 categories mx-auto mb-5 flex-grow-0">
      <h1 class="h4 mb-3">Filtros</h1>
      <p class="m-0"><a href="?filter=accesorios">Accesorios</a></p>
      <p class="m-0"><a href="?filter=almacenamiento">Almacenamiento</a></p>
      <p class="m-0"><a href="?filter=memorias">Memorias</a></p>
      <p class="m-0"><a href="?filter=procesadores">Procesadores</a></p>
      <hr>
      <p class="m-0"><a href="store">Quitar filtros</a></p>
    </div>
    <div class="col-md-9 grid text-center mx-auto">
      <% docs.forEach( function (doc) { %>
        <a href="/product/<%= doc.id %>-<%= _.kebabCase(doc.marca) %>-<%= _.kebabCase(doc.modelo) %>" class="product">
          <div class="prodGrid bg-body rounded">
            <div class="imgDiv">
              <img src="<%= doc.imagen %>" alt="" class="rounded productImg">
            </div>
            <div class="headerDiv">
              <h1 class="h6 m-0"><%= doc.marca %> <%= doc.modelo %> </h1>
            </div>
            <p class="m-0"><%= doc.precio.toLocaleString('es-CL', {style:"currency", currency:"CLP"}) %> </p>
          </div>
        </a>
      <% }) %>
    </div>
  </div>
<% } %>

