<div class="addProducts">
  <div class="text-center mb-3">
    <h1 class="fw-normal">Hi <%= name %>, llena los campos para registrar un producto.</h1>
  </div>
  <% if (message) { %>
    <div class="alert alert-success" role="alert">
      <%= message %>
    </div>
  <% } %>
  <form action="addProducts" method="post">
    <input type="hidden" name="id" value="<%= id %>">
    <div class="mb-2">
      <label for="marca" class="form-label">Marca</label>
      <input type="text" class="form-control" id="marca" name="marca" required>
    </div>
    <div class="mb-2">
      <label for="modelo" class="form-label">Modelo</label>
      <input type="text" class="form-control" id="modelo" name="modelo" required>
    </div>
    <div class="mb-2">
      <label for="comentario" class="form-label">Comentario</label>
      <input type="text" class="form-control" id="comentario" name="comentario" required>
    </div>
    <div class="mb-2">
      <label for="categoria" class="form-label">Categoria</label>
      <select id="" class="form-select" name="categoria">
        <option value="Almacenamiento">Almacenamiento</option>
        <option value="Mouse">Mouse</option>
        <option value="Procesador">Procesador</option>
        <option value="RAM">RAM</option>
        <option value="Teclado">Teclado</option>
      </select>
    </div>
    <div class="mb-2">
      <label for="precio" class="form-label">Precio</label>
      <input type="number" class="form-control" id="precio" name="precio" min="0" required>
    </div>
    <div class="mb-3">
      <label for="stock" class="form-label">Stock</label>
      <input type="number" class="form-control" id="stock" name="stock" min="0" required>
    </div>
    <div class="text-center mb-3">
      <button class="btn btn-outline-primary w-50">Agregar</button>
    </div>
  </form>
  <div class="text-center mb-5">
    <a href="/login" class="btn btn-outline-danger float-end">Volver atrás</a>
  </div>
</div>

